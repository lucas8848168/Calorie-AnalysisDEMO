# workers/src/doubaoClient.ts
# workers/src/config.ts
# workers/src/worker.ts

# -------------------- 敏感文档 --------------------
# 包含部署信息、API 密钥配置的文档
DEPLOYMENT_*.md
GITHUB_*_GUIDE.md
GITHUB_*_COMPLETE.md
GITHUB_*_SUCCESS.md
快速部署指引.md
CLOUDFLARE_FREE_TIER_ANALYSIS.md

# -------------------- 项目管理文档（可选）--------------------
# 内部项目管理文档，不需要公开
TASK_*.md
P1_*.md
*_COMPLETION_*.md
*_CHECKPOINT_*.md
PROJECT_FINAL_ARCHIVE.md
PROJECT_ORGANIZATION_LOG.md
PROJECT_PRESENTATION_SUMMARY.md
UX_OPTIMIZATION_RECOMMENDATIONS.md

# -------------------- 私有目录 --------------------
